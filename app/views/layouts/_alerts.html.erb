<% if flash[:notice] then %>
    <div class="alert-box">
      <%= flash[:notice]%>
      <a href="" class="close">&times;</a>
    </div>
<% end %>
<% if flash[:success] then %>
    <div class="alert-box success">
      <%= flash[:notice]%>
      <a href="" class="close">&times;</a>
    </div>
<% end %>
<% if flash[:error] then %>
    <div class="alert-box alert">
      <%= flash[:notice]%>
      <a href="" class="close">&times;</a>
    </div>
<% end %>