<% user_id = get_user_id(request) %>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "/" , :class=>"brand" do %>
          DOMKEE <small style="font-size: 15px;"> beta </small>
      <% end %>
      <%= link_to "http://acm.uniandes.edu.co" do %>
          <%= image_tag "acm.png" ,:class=>"pull-right",:style=>"margin-top: 10px",:alt=>"ACM - UNIANDES" %>
      <%end%>
      <div class="nav-collapse collapse">

        <ul class="nav">
          <% if user_id then  %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-user"></i>
                  <%= User.find(user_id).name %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "/me" do%>
                        <i class="icon-book"></i> mis anuncios
                    <%end%>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "/logout" do%>
                        <i class="icon-off"></i> logout
                    <%end%>
                  </li>
                </ul>
              </li>
          <% else %>
              <li>
                <%= render "layouts/fb_client_login" %>
              </li>
          <% end %>
          <%= render_if user_id do %>
              <li>
                <%= link_to new_ad_path do %>
                    <i class="icon-pencil"></i> Publicar Anuncio
                <% end %>
              </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-tags"></i> categorias
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="nav-header">Categorias</li>
              <% Category.get_top(5).each do |c| %>
                  <li> <%= link_to c.name, c %></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to "Todas",categories_path %></li>
            </ul>
          </li>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>