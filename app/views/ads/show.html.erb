<p id="notice"><%= notice %></p>

<div class="row">

  <div class="span4">
    <%= image_tag @ad.image %>
  </div>
  <div class="span8">
    <h2><%= @ad.title %></h2>

    <p>
      <b>Descripcion:</b>
      <%= @ad.description %>
    </p>

    <p>
      <b>Precio:</b>
      <span class="badge badge-warning"><%= @ad.price %></span>

    </p>


    <p class="label label-info">
      <%= @ad.category.name %>
    </p>
  </div>
</div>
<hr>
<div class="row">
    <%= render_disqus (request.fullpath) %>
</div>
<%= link_to 'Edit', edit_ad_path(@ad) %> |
<%= link_to 'Back', ads_path %>
